---
layout: "base.njk"
link_definitions:
    github:
        text: Source code on GitHub
head_extra: |
    <link rel="stylesheet" href="/styles/home.css">
---

{% macro project_panel(project) %}
    <div class="panel">
        <a href="{{ project.url }}" class="name"><h3>{{ project.name }}</h3></a>
        {% if project.description %}
            <div class="description">{{ project.description | safe }}</div>
        {% endif %}
        <div class="links">
            {% for name, url in project.links %}
                {% set link_data = link_definitions[name] %}
                <a href="{{url}}">{{ link_data.text }}</a>
            {% endfor %}
        </div>
    </div>
{% endmacro %}

